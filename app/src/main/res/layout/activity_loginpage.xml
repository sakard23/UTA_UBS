<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xakr.uta_ubs.wcpage">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/Password"
        android:hint="Password"

        android:layout_below="@+id/log_in"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="18dp" />


    <Button
        android:id="@+id/login_button"
        android:text="LOG IN"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="logIn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Password"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="here."
        android:onClick="registerUser"
        android:clickable="true"
        android:layout_toRightOf="@+id/signup"
        android:paddingLeft="-35dp"
        android:layout_alignBaseline="@+id/signup"
        style="?android:attr/borderlessButtonStyle"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="8"
        android:paddingRight="30dp"
        android:id="@+id/log_in"
        android:layout_marginTop="119dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Password" />

    <TextView
        android:text="@string/wc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Not a member? Sign up "
        android:id="@+id/signup"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/login_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/at"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/signup"
        android:layout_marginBottom="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

