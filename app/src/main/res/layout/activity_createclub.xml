<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sendmsg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E0F2F1"
    android:orientation="vertical"
    tools:context="com.example.xakr.uta_ubs.sendmsg">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Club Name"
        android:id="@+id/select"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Club Admin"
        android:id="@+id/admin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Club Function"
        android:layout_weight="1"
        android:gravity="top"
        android:id="@+id/func" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="345dp"
        android:text="Create a New Club"
        android:background="#009688"
        android:textColor="#FFFFFF"
        android:layout_gravity="end"
        android:id="@+id/send10"/>

    <Button
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="View All Club(s)"
        android:background="#009688"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:id="@+id/send111"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID of Club you want to Update or Delete"
        android:id="@+id/id"/>

    <Button
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Update Information"
        android:background="#009688"
        android:textColor="#FFFFFF"
        android:layout_gravity="end"
        android:id="@+id/send001"/>

    <Button
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Delete Club"
        android:background="#009688"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:id="@+id/send002"/>


</LinearLayout>